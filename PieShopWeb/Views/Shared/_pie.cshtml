@model Entities.Pie

<div class="col-md-4">
    <div class="card">
        <img src="~/images/@Model.ImageThumbnailUrl" alt="@Model.Name" class="img-fluid" style="max-width:256px; max-height:170px;" />
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i>@Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a href="/Pie/Details/@Model.PieId" class="btn btn-outline-primary btn-sm ml-3">Details</a>
            <a class="btn btn-outline-primary btn-sm ml-3" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId">Add To Cart</a>
        </div>
    </div>
</div>
